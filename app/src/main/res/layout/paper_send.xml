<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:animateLayoutChanges="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_single_item_height"
    android:paddingLeft="@dimen/list_single_padding_left"
    android:paddingRight="@dimen/list_single_padding_left"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/more_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="@dimen/list_single_item_text"
      android:text="@string/send_more_fields"/>

    <TextView
      android:id="@+id/forum_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="@dimen/list_single_item_text"
      android:text="@string/send_forum"/>

    <TextView
      android:id="@+id/forum_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/send_forum_margin_left"
      android:paddingTop="@dimen/send_forum_padding_top"
      android:paddingBottom="@dimen/send_forum_padding_bottom"
      android:paddingLeft="@dimen/send_forum_padding_left"
      android:paddingRight="@dimen/send_forum_padding_right"
      android:textSize="@dimen/list_single_item_text"
      android:textColor="?android:attr/textColorPrimary"/>

    <android.support.v4.widget.Space
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>

    <ImageView
      android:id="@+id/more_action"
      android:layout_width="@dimen/list_single_item_icon_size"
      android:layout_height="@dimen/list_single_item_icon_size"
      android:padding="@dimen/list_single_item_icon_padding"
      android:background="?attr/clickBackground"/>

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?attr/dividerColor"/>

  <LinearLayout
    android:id="@+id/more"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:divider="@drawable/divider_v_x1_light"
    android:showDividers="middle|end">

    <com.hippo.nimingban.widget.AutoEditText
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="@dimen/list_single_item_height"
      android:paddingLeft="@dimen/list_single_padding_left"
      android:paddingRight="@dimen/list_single_padding_left"
      android:hint="@string/send_title"
      android:textSize="@dimen/list_single_item_text"
      android:background="@null"
      android:inputType="text"/>

    <com.hippo.nimingban.widget.AutoEditText
      android:id="@+id/name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/list_single_item_height"
      android:paddingLeft="@dimen/list_single_padding_left"
      android:paddingRight="@dimen/list_single_padding_left"
      android:hint="@string/send_name"
      android:textSize="@dimen/list_single_item_text"
      android:background="@null"
      android:inputType="text"/>

    <com.hippo.nimingban.widget.AutoEditText
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="@dimen/list_single_item_height"
      android:paddingLeft="@dimen/list_single_padding_left"
      android:paddingRight="@dimen/list_single_padding_left"
      android:hint="@string/send_email"
      android:textSize="@dimen/list_single_item_text"
      android:background="@null"
      android:inputType="textEmailAddress"/>

  </LinearLayout>

  <com.hippo.nimingban.widget.AutoEditText
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="@dimen/key_margin"
    android:gravity="left|top"
    android:background="@null"
    android:inputType="textMultiLine"/>

</LinearLayout>
