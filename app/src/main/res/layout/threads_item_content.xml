<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/user"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="left|top"/>

    <TextView
      android:id="@+id/id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal|top"/>

    <TextView
      android:id="@+id/date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="right|top"/>

  </LinearLayout>

  <TextView
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/header"
    android:layout_marginTop="@dimen/threads_item_content_item_margin"
    android:textSize="@dimen/text_little_small"
    android:textColor="?android:attr/textColorPrimary"
    android:lineSpacingExtra="2dp"
    android:maxLines="8"
    android:ellipsize="end"/>

  <com.hippo.nimingban.widget.nmb.NmbThumb
    android:id="@+id/thumb"
    android:layout_width="@dimen/thumb_width"
    android:layout_height="@dimen/thumb_height"
    android:layout_below="@id/content"
    android:layout_marginTop="@dimen/threads_item_content_item_margin"
    style="@style/Nmb.Thumb"/>

  <LinearLayout
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/thumb"
    android:layout_marginTop="@dimen/threads_item_content_item_margin"
    android:orientation="horizontal">

    <com.hippo.nimingban.widget.nmb.NmbReplayMarquee
      android:id="@+id/replies"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:inAnimation="@anim/anim_fade_in"
      android:outAnimation="@anim/anim_fade_out"/>

    <TextView
      android:id="@+id/reply_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/threads_item_content_item_margin"
      android:gravity="center"
      android:drawablePadding="@dimen/threads_item_content_item_margin"/>

  </LinearLayout>
</merge>
