<resources>

  <style name="AppTheme.Dark" parent="Theme.AppCompat">
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryDark">@color/purple_700</item>
    <item name="colorAccent">@color/green_ntr</item>

    <item name="colorControlHighlight">@color/ripple_dark</item>

    <item name="drawableColorPrimary">@color/primary_drawable_dark</item>
    <item name="drawableColorSecondary">@color/secondary_drawable_dark</item>

    <item name="dividerColor">@color/divider_dark</item>

    <item name="backgroundColorStatusBar">@color/background_status_bar_dark</item>
    <item name="backgroundColorAppBar">@color/background_app_bar_dark</item>
    <item name="backgroundColorWindow">@color/background_window_dark</item>
    <item name="backgroundColorContent">@color/background_content_dark</item>

    <item name="clickBackground">@drawable/click_background_dark</item>
    <item name="itemBackground">@drawable/item_background_dark</item>
    <item name="contentBackground">@drawable/content_background_dark</item>

    <item name="forumListItemTextColor">@color/forum_list_item_text_dark</item>

    <item name="android:windowBackground">?attr/backgroundColorWindow</item>
  </style>

  <style name="AppTheme.Dark.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppTheme.Dark.Nmb" parent="AppTheme.Dark.NoActionBar"/>

</resources>
