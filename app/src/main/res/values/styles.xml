<resources>

  <style name="ProgressView">
    <item name="color">?attr/colorAccent</item>
    <item name="indeterminate">true</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
  </style>

  <style name="ProgressView.Small">
    <item name="android:minWidth">16dp</item>
    <item name="android:minHeight">16dp</item>
  </style>

  <style name="ProgressView.Large">
    <item name="android:minWidth">76dp</item>
    <item name="android:minHeight">76dp</item>
  </style>

  <style name="Slider">
    <item name="thickness">2dp</item>
    <item name="radius">6dp</item>
    <item name="color">?attr/colorPrimary</item>
    <item name="bgColor">?attr/backgroundColorStatusBar</item>
    <item name="textColor">?android:attr/textColorPrimaryInverse</item>
    <item name="textSize">@dimen/text_super_small</item>
  </style>

  <style name="Slider.Dark">
    <item name="textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Nmb"/>

  <style name="Nmb.Thumb">
    <item name="placeholderImage">?attr/backgroundColorStatusBar</item>
    <item name="actualImageScaleType">fitCenter</item>
  </style>

  <style name="Nmb.Image">
    <item name="actualImageScaleType">fitCenter</item>
  </style>

  <style name="Nmb.Cover">
    <item name="placeholderImage">?attr/backgroundColorStatusBar</item>
    <item name="viewAspectRatio">1</item>
  </style>

  <style name="Nmb.LeftDrawer">
    <item name="android:orientation">vertical</item>
  </style>

</resources>
